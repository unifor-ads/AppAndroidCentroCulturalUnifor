<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comentario_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Avatar do usuário -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nome de usuário -->
        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Usuário"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Usuário de Exemplo" />

        <!-- Comentário do usuário -->
        <TextView
            android:id="@+id/textComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Este é um comentário de exemplo em uma rede social. Ele pode ser mais longo ou curto, dependendo do que o usuário escreve."
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text="Este é um comentário de exemplo em uma rede social. Ele pode ser mais longo ou curto, dependendo do que o usuário escreve." />

        <!-- Data do comentário -->
        <TextView
            android:id="@+id/textDataComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="2 horas atrás"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="12sp"
            tools:text="2 horas atrás" />
    </LinearLayout>
</LinearLayout>
